{
  "build": {
    "beforeBuildCommand": "pnpm run build:renderer",
    "beforeDevCommand": "pnpm run dev:renderer",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "CC Switch",
    "version": "3.8.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.ccswitch.desktop",
      "targets": ["deb", "appimage", "rpm"],
      "createUpdaterArtifacts": false,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "linux": {
        "deb": {
          "files": {}
        }
      },
      "windows": {
        "wix": {
          "template": "wix/per-user-main.wxs"
        }
      },
      "macOS": {
        "minimumSystemVersion": "10.15"
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' ipc: http://ipc.localhost https: http:",
      "assetProtocol": {
        "scope": ["**"]
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "CC Switch",
        "width": 1000,
        "height": 650,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ]
  }
}
